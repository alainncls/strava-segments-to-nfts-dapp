{
  "name": "blockchain",
  "version": "0.0.1",
  "description": "Decentralized application aiming to generate an NFT for each new unique and eligible segment a Strava user runs through. ",
  "repository": "git@github.com:alainncls/strava-segments-to-nfts-dapp.git",
  "author": "Alain Nicolas",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:goerli": "hardhat run --network goerli scripts/deploy.ts",
    "deploy:linea-goerli": "hardhat run --network linea-goerli scripts/deploy.ts",
    "deploy:sepolia": "hardhat run --network sepolia scripts/deploy.ts",
    "lint": "pnpm solhint \"{script,contracts,test}/**/*.sol\"",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.2",
    "solhint": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
