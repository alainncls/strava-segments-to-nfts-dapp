{
  "name": "strava-segments-to-nfts-dapp",
  "version": "0.0.1",
  "description": "Decentralized application aiming to generate an NFT for each new unique and eligible segment a Strava user runs through. ",
  "repository": "git@github.com:alainncls/strava-segments-to-nfts-dapp.git",
  "license": "ISC",
  "author": "Alain Nicolas",
  "main": "index.js",
  "scripts": {
    "compile": "truffle compile && cp build/contracts/StravaSegment.json ../www/src/config/",
    "dashboard": "truffle dashboard",
    "migrate:dashboard": "truffle migrate --network dashboard",
    "migrate:goerli": "truffle migrate --network goerli",
    "migrate:local": "truffle migrate --network development",
    "migrate:sepolia": "truffle migrate --network sepolia",
    "test": "truffle test",
    "verify:goerli": "truffle run verify StravaSegment --network goerli",
    "verify:sepolia": "truffle run verify StravaSegment --network sepolia"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "@truffle/hdwallet-provider": "^2.1.9",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "truffle": "^5.8.1",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.6.2"
  }
}
